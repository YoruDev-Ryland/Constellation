{
  "name": "constellation",
  "version": "1.0.7",
  "description": "Astrophotography file organization and tracking",
  "main": "main.js",
  "author": "Your Name <your.email@example.com>",
  "homepage": "https://github.com/YoruDev-Ryland/Constellation",
  "repository": {
    "type": "git",
    "url": "https://github.com/YoruDev-Ryland/Constellation.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:all": "electron-builder -mwl",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "publish": "electron-builder --publish always"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "fitsjs": "^0.6.6",
    "axios": "^1.7.7",
    "keytar": "^7.9.0",
    "electron-updater": "^6.1.7",
    "electron-log": "^5.0.3"
  },
  "devDependencies": {
    "electron": "^38.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.constellation.app",
    "productName": "Constellation",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "YoruDev-Ryland",
        "repo": "Constellation",
        "private": false,
        "releaseType": "release"
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "auto-updater.js",
      "renderer/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.photography",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Graphics",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Constellation"
    },
    "dmg": {
      "title": "Constellation ${version}"
    }
  }
}
